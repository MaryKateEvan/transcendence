{
    // "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 22",
    "_version": "22.0.0",
    "compilerOptions": {
        "target": "es2022",
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "lib": ["es2023"],
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.d.ts", "**/*.spec.ts"]
}
